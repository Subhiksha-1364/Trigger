trigger CaseTrigger on Case (before update) {
    
    Switch on Trigger.OperationType
    {
        when BEFORE_UPDATE
        {
            for(Case caseList : Trigger.new)
            {
                if(Trigger.oldmap.get(caselist.Id).Status=='Closed' && CaseList.Status=='New')
                {
                    caselist.Status.addError(Label.Case_reopen_error);
                }
                
            }
        }
    }
}
